@model IEnumerable<SCF.Models.Pais>

<h2>Países</h2>

<p>
    <a asp-action="CriarPais" class="btn btn-info">Cadastrar País</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                <a asp-action="AtualizarPais" asp-route-id="@item.PaisId" class="btn btn-primary">Editar</a> |
                <a asp-action="ExcluirPais" asp-route-id="@item.PaisId"  class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
