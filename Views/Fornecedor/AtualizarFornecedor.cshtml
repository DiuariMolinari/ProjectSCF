@model SCF.Models.Fornecedor

@{
    ViewData["Title"] = "AtualizarFornecedor";
}

<h2>Atualizar Fornecedor</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarFornecedor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FornecedorId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CPF/CNPJ</label>
                <input asp-for="CpfCnpj" type="text" class="form-control" id="CpfCnpj" required/>
                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rg" class="control-label"></label>
                <input asp-for="Rg" class="form-control" id="Rg" maxlength="15" pattern="([A-Za-z0-9]{0,15})" />
                <span asp-validation-for="Rg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data de nascimento</label>
                <input asp-for="DataNascimento" class="form-control" id="Data" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CadastradoEm" class="form-control" id="CadastradoEm" type="hidden"/>
                <span asp-validation-for="CadastradoEm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" /> |
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
        asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
        asp-fallback-test="window.jQuery"
        crossorigin="anonymous"
        integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
</script>

<script type="text/javascript" src="~/js/Fornecedor/CriarFornecedor.js"></script>

