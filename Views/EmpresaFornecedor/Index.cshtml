@model IEnumerable<SCF.Models.EmpresaFornecedor>

<h2>Fornecedores da Empresa @ViewBag.Empresa</h2>
<p>
    <a asp-action="CriarEmpresaFornecedor" asp-route-id="" class="btn btn-primary">Vincular fornecedor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                Cadastrado Em
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CadastradoEm)
            </td>
            <td>
                <a asp-action="ExcluirEmpresaFornecedor" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="form-group" style="text-align: right">
    <a asp-action="Index" asp-controller="Empresa" class="btn btn-default">Voltar</a>
</div>



<script type="text/javascript">
    sessionStorage.setItem('Empresa', @ViewBag.EmpresaId);
</script>
