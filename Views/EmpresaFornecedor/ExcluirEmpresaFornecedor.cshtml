@model SCF.Models.EmpresaFornecedor

<h2>Desvincular Fornecedor</h2>

<h3>Tem certeza que deseja fazer isso?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Empresa
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Empresa.NomeFantasia)
        </dd>
        <dt>
            Fornecedor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
        <dt>
            Cadastrado Em
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CadastradoEm)
        </dd>
    </dl>
    
    <form asp-action="ExcluirEmpresaFornecedor">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Empresa" class="btn btn-default">Voltar</a>
    </form>
</div>
